@model CouponDTO
@{
}

<form asp-controller="Coupon" asp-action="UpdateCoupon" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-center">Update Coupon</h1>
        <input asp-for="CouponId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:17px;">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="CouponCode" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:17px;">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="DiscountAmount" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>

            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:17px;">Minimum Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="MinAmount" />
                <span asp-validation-for="MinAmount" class="text-danger"></span>

            </div>

            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control" asp-controller="Coupon" asp-action="CouponIndex">Back to List</a>
            </div>
            <div class="col-5">
                
                <button type="submit" class="btn btn-success form-control">Update Coupon</button>

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
