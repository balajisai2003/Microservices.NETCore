@model List<ProductDTO>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1>Product List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="CreateProduct" asp-controller="Product" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Product</a>

			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Product Name
					</th>
					<th>
						Category Name
					</th>
					<th>
						Price
					</th>
					<th>
						Description
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>

				<tr>
					@foreach (var item in Model)
					{

					<tr>
						<td>
								@item.ProductName
						</td>
						<td>
								@item.CategoryName
						</td>
						<td>
								@item.Price
						</td>
						<td>
                                @item.Description
						</td>
						<td>
							<a class="btn btn-success" asp-controller="Product" asp-action="UpdateProduct" asp-route-productId="@item.ProductID">
								<i class="bi bi-pencil"></i>
							</a>
						</td>
						<td class="flex">
							<a class="btn btn-danger" asp-controller="Product" asp-action="DeleteProduct" asp-route-productId="@item.ProductID">
								<i class="bi bi-trash"></i>
							</a>
						</td>
						
					</tr>
					}
				

			</tbody>
		</table>

	</div>

</div>